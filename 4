#include <cstdlib>
#include <stdio.h>
#include <iostream>
#include <iomanip>
using namespace std;

//User Libraries 

//Global Constants 

//Function Prototype 

//Execution begins here!

int main(int argc, char** argv) 
{
    
    //Declare Variables 
    float replacement_cost , min_amount; //cost to replace the structure and minimum insurance
    
    cout << "\n Replacement Cost: $";
    cin >> replacement_cost;
    
    //Calculate minimum insurance
    min_amount = (replacement_cost * 0.8); //minimum insurance needed
    
    
    //Display
    cout << "\n Minimum amount of insurance: $" << min_amount << endl;
            
            
   
   
   
    
    
    //Exit Stage Right!
    return 0;
}

